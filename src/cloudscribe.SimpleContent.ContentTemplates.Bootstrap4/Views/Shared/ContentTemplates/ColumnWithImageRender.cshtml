@model cloudscribe.SimpleContent.ContentTemplates.ViewModels.ColumnsWithImageViewModel
@{
    Layout = "_LayoutEmpty";
}

<div class="row">
    @if (!string.IsNullOrWhiteSpace(Model.ColumnOneContent))
    {
        <div class="col-12 col-md-6 col-lg-3">
            @if (!string.IsNullOrWhiteSpace(Model.ColumnOneResizedUrl))
            {
                <img src="@Model.ColumnOneResizedUrl" class="image-responsive mb-1" alt="@Model.ColumnOneAltText" />
            }
            @Html.Raw(Model.ColumnOneContent)
        </div>
    }
